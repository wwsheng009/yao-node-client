{
  "name": "yao-node-client",
  "version": "1.0.0",
  "description": "create yao script with typescript",
  "type": "commonjs",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/app/scripts/myscript.ts",
    "run": "pnpm run build  && ts-node -r tsconfig-paths/register src/app/scripts/myscript.ts",
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\"",
    "esbuild:comp": "ts-node src/tools/build.ts -i dist_esm/app/scripts/rollup/index.js -o dist_esm/app/scripts/rollup/index.dist.js",
    "esbuild:proxy-client": "esbuild dist_esm/yao-node-proxy-client/index.js --bundle --platform=node --outfile=dist_esm/yao-node-proxy-client/bound-cient.js",
    "test": "jest",
    "rollup:comp": "rollup -c rollup.config.mjs -i dist_esm/app/scripts/rollup/index.js -o dist_esm/app/scripts/rollup/index.bound.js",
    "yao:build-direct": "rimraf dist_esm && tsc -p ./tsconfig-yao-deirect.json && tsc-alias -p ./tsconfig-yao-deirect.json",
    "build_comment": "no",
    "yao:build": "rimraf dist_esm && tsc -p ./tsconfig-yao.json && tsc-alias -p ./tsconfig-yao.json",
    "yao:rollup": "rimraf yao && rollup -c rollup.config.mjs",
    "yao:fixed": "ts-node -r tsconfig-paths/register src/tools/clean_up.ts",
    "yao:all": "pnpm run yao:build && pnpm run yao:rollup && pnpm run yao:fixed",
    "clean:all": "rimraf dist && rimraf dist_esm && rimraf yao"
  },
  "keywords": [
    "yao-client",
    "yao"
  ],
  "author": "vincentwwsheng@gmail.com",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "mime": "^3.0.0",
    "sync-fetch": "^0.4.2",
    "ws": "^8.12.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.4.0",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.14.0",
    "@types/sync-fetch": "^0.4.0",
    "@types/ws": "^8.5.4",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.8",
    "esm": "^3.2.25",
    "glob": "^8.1.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "rollup": "^3.17.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}